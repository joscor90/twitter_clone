<div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-4">Welcome <%= current_user ? current_user.name : "stranger" %>!</h1>
      <p class="lead">This is definetly not Twitter!.</p>
    </div>
</div>

<% if user_signed_in? %>
    <div class = "container">
        <h3>Share something</h3>
        <%= form_with(model: @tweet, local: true) do |ff| %>
            <div class = "form-group">
                <div>
                    <%= ff.text_area :content, class: "form-control w-50" %>
                </div>
            </div>
        
            <div>
                <%= ff.submit nil, class: "btn btn-primary mt-2 mb-5" %>
            </div>
        <% end %>
    </div>
<% end %>


<div class = "container">
    <h3 class= "mb-4">Latest tweets</h3>
    <% @tweets.each do |tweet| %>
        <div class="card mb-3" style="width: 20 rem;">
            <div class="card-body">
                <h5 class="card-title"><%= tweet.user %></h5>
                <p class="card-text"><%= tweet.content %>.</p>
                <span class="text-primary"><%= tweet.retweets.count %></span>
                <% if user_signed_in? %>
                    <% if tweet.retweets.include?(Retweet.find_by(user_id: current_user.id, tweet_id: tweet.id)) %>
                        <span class="text-primary">rtweeted</span>
                    <% else %>
                        <%= link_to 'Retweet', retweet_path(tweet), class: "card-link" %>
                    <% end %>
                <% end %>
                <span class="text-primary"><%= tweet.likes.count %></span>

            </div>
        </div>
    <% end %>
</div>
